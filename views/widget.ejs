<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Talk Floating Widget</title>
  <style>
    #widget-container {
      position: fixed;
      bottom: 20px;
      right: 20px;
      z-index: 9999;
    }

    #widget {
      position: relative;
      width: 400px;
      height: 620px;
      border-radius: 8px;
      padding: 5px 5px 5px 16px;
      overflow: hidden;
      box-shadow: 0px 0px 16px rgba(0, 0, 0, 0.2);
      background-color: #fff;
      box-sizing: border-box;
      display: none;
    }

    #widget-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      height: 48px;
      padding: 5px 5px 5px 16px;
      margin: 20px;
      background-color: #00a0df;
      color: #fff;
      font-size: 18px;
      font-weight: bold;
      cursor: move;
    }

    #widget-close {
      font-size: 24px;
      font-weight: bold;
      cursor: pointer;
    }

    #widget-iframe {
      width: 100%;
      height: 100%;
      border: none;
      box-sizing: border-box;
    }

    #widget-toggle {
      position: fixed;
      bottom: 20px;
      right: 20px;
      width: 48px;
      height: 48px;
      border-radius: 50%;
      background-color: #00a0df;
      box-shadow: 0px 0px 16px rgba(0, 0, 0, 0.2);
      color: #fff;
      font-size: 24px;
      font-weight: bold;
      text-align: center;
      line-height: 48px;
      cursor: pointer;
      z-index: 10000;
    }
  </style>
</head>
<body>
  <div id="widget-container">
    <div id="widget">
      <div id="widget-header">
        Talk Floating Widget
        <span id="widget-close">&times;</span>
      </div>
      <iframe id="widget-iframe" src="https://9dc0-41-80-112-84.eu.ngrok.io"></iframe>
    </div>
  </div>
  <div id="widget-toggle">+</div>
  <script>
    const widget = document.getElementById('widget');
    const toggleButton = document.getElementById('widget-toggle');
    const closeButton = document.getElementById('widget-close');

    toggleButton.addEventListener('click', () => {
      if (widget.style.display === 'none') {
        widget.style.display = 'block';
        toggleButton.textContent = '-';
      } else {
        widget.style.display = 'none';
        toggleButton.textContent = '+';
      }
    });

    closeButton.addEventListener('click', () => {
      widget.style.display = 'none';
      toggleButton.textContent = '+';
    });

  </script>
</body>
</html>
